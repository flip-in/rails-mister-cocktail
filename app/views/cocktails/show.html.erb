<div class="cocktail-container">
  <div class="image-container col-md-5" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @cocktail.photo.key %>');">
    <h1><%= @cocktail.name %></h1>
  </div>
  <div class="doses-container col-md-7 py-5">
    <div class="ingredients-container row">
      <div class="ingredients col-md-6">
        <ul>
          <% @cocktail.doses.each do |dose| %>
            <li>
              <p><%= dose.description %> -> <%= dose.ingredient.name %>
              <%= link_to dose_path(dose), method: :delete do %>
                <i class="fas fa-trash text-dark"></i></p>
              <% end %>
            </li>
          <% end %>
        </ul>
      </div>
      <div class="instructions-container col-md-5">
        <p class="instructions"><%= @cocktail.instructions %></p>
      </div>
    </div>
    <div class="buttons-container d-flex py-4 justify-content-between">
      <div class="ingredients-button mx-3">
        <%#= link_to "Add Ingredients","#", class: "btn btn-primary", id: "formButton" %>
        <button class="btn btn-custom" id="formButton">Add Ingredient</button>
      </div>
      <div class="instructions-button mx-3">
        <%#= link_to "Edit Instructions", "#", class: "btn btn-primary", id: "instructionsButton" %>
        <button class='btn btn-custom' id='instructionsButton'>Edit Instructions</button>
      </div>
    </div>
    <div class="form-container ml-2 d-none">
    <!-- FORM HERE -->
      <div class="row">
        <div class="col-md-6">
          <%= render "cocktails/form" %>
        </div>
      </div>
    </div>
  </div>
</div>