<div class="container">
  <h1 class="text-center"><%= @cocktail.name %></h1>
  
  <ul>
    <% @cocktail.doses.each do |dose| %>
      <li>
        <%= dose.description %> -> <%= dose.ingredient.name %>
      </li>
    <% end %>
  </ul>

  <%= link_to 'add some new doses to this cocktail', new_dose_path(@cocktail) %>
  <br>
  <%= link_to 'go back to cocktails home', cocktails_path %>
</div>