<div class="cocktail-container">
  <div class="image-container col-md-4" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @cocktail.photo.key %>');">
    <h1><%= @cocktail.name %></h1>
  </div>
  <div class="doses-container col-md-8 py-5">
    <div class="ingredients-container">
      <ul>
        <% @cocktail.doses.each do |dose| %>
          <li>
            <p><%= dose.description %> -> <%= dose.ingredient.name %>
            <%= link_to dose_path(dose), method: :delete do %>
              <i class="fas fa-trash text-dark"></i></p>
            <% end %>
          </li>
        <% end %>
      </ul>
      <%= @cocktail.instructions %>
    </div>
    <div class="form-container">
    <!-- FORM HERE -->
      <div class="row">
        <div class="col-md-6">
          <h2>Add some ingredients to <%= @cocktail.name %></h2>
            <%= simple_form_for [@cocktail, @dose] do |f| %>
              <%= f.input :description  %>
              <%= f.association :ingredient %>
              <%= f.submit "Add Ingredient"%>
            <% end %>
        </div>
      </div>
    </div>
  </div>
</div>